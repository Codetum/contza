{
    "name": "contza",
    "description": "Contza public packages.",
    "version": "1.0.0",
    "license": "Apache-2.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:client": "yarn workspace @contza/client build",
        "build:react": "yarn build:client && yarn workspace @contza/react build",
        "next-playground": "yarn workspace next-playground"
    },
    "devDependencies": {
        "prettier": "^2.7.1"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "printWidth": 100
    }
}
